<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:focusable="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include
        layout="@layout/layout_nativagion_title"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/icon_phone"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/et_register_phone"
            android:layout_width="match_parent"
            android:inputType="phone"
            android:textSize="@dimen/text_font_size_28"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:hint="请输入手机号"
            android:textColorHint="@color/hihtcolor"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/backcolor"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/icon_password"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:textSize="@dimen/text_font_size_28"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:hint="请输入6-20位数字和字母组合新密码"
            android:textColorHint="@color/hihtcolor"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/backcolor"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/icon_password"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/et_register_sure_password"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:textSize="@dimen/text_font_size_28"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:hint="请再输一次新密码"
            android:textColorHint="@color/hihtcolor"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/backcolor"
        android:layout_height="1dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_register"
            android:layout_width="wrap_content"
            android:background="@drawable/icon_safe"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/et_register_code"
            android:layout_width="match_parent"
            android:inputType="number"
            android:textSize="@dimen/text_font_size_28"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_register"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:hint="请输入短信验证码"
            android:textColorHint="@color/hihtcolor"
            android:layout_height="match_parent"
            android:maxLength="6"
            />
        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_font_size_28"
            android:textColor="@color/blue"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="获取验证码"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/backcolor"
        android:layout_height="1dp"></View>

    <Button
        android:id="@+id/btn_sure_register"
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:background="@drawable/setting_logout_btn_bg"
        android:textColor="@color/brown"
        android:textSize="@dimen/text_font_size_30"
        android:text="确定"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_height="45dp"/>
</LinearLayout>