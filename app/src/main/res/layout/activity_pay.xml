<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/layout_top_select"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/apptheme_bg">
        <ImageButton
            android:id="@+id/image_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/back"
            android:visibility="visible" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择充值方式"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <ImageButton
            android:id="@+id/image_service"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/kf1" />
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_order_card_bean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="订单名称：购买200"
                android:textColor="@color/black_light"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_order_card_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="订单金额：100元"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_light"
                android:textSize="15sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ededed" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_account_blance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/select_account_imag"
                android:gravity="center"
                android:text="余额"
                android:textColor="@color/black_light"
                android:textSize="14sp" />
            <CheckBox
                android:id="@+id/cb_balance"
                android:layout_width="wrap_content"
                android:checked="false"
                android:button="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/cb_select_balance"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/select_account_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/cb_balance"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="是否余额支付"
                android:textColor="@color/black_light"
                android:textSize="14sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/select_money_image"
                android:gravity="center"
                android:text="你需支付："
                android:textColor="@color/black_light"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_order_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="￥0"
                android:textColor="@color/black_light"
                android:textSize="14sp" />
        </LinearLayout>
        <!-- 支付方式 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="选择支付方式"
                android:textColor="@color/black_light"
                android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:background="@color/backgroundcolor"
            android:layout_height="1dp"></View>
        </LinearLayout>

        <!-- 支付宝支付 -->
    <RelativeLayout
        android:id="@+id/rl_pay_alipay"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <ImageView
            android:id="@+id/iv_alipay_logo"
            android:layout_width="wrap_content"
            android:background="@drawable/icon_alipay"
             android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/iv_alipay_logo"
            android:gravity="center"
            android:text="支付宝支付"
            android:textColor="@color/black_light"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>
    </LinearLayout>

