<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/apptheme_bg">

        <ImageButton
            android:id="@+id/image_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/ranktwo_catchtitle_tv"
                android:textSize="13sp"
                android:textColor="@color/apptheme_bg"
                android:layout_gravity="center_horizontal"
                android:text="游戏记录"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:background="@drawable/white_circleborder"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ranktwo_guesstitle_tv"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:text="竞猜记录"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/main_center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="#DDDCDC" />

</LinearLayout>
