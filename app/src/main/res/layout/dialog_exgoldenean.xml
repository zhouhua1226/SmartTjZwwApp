<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/exgoldenbean_dialog_bg">

    <TextView
        android:id="@+id/exgoldenbean_dialog_goldnum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/apptheme_bg"
        tools:text="1000金豆"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/exgoldenbean_dialog_cancle_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/exgoldenbean_dialog_cancle"
            android:layout_marginRight="20dp"
            />
        <Button
            android:id="@+id/exgoldenbean_dialog_sure_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/exgoldenbean_dialog_sure"
            />

    </LinearLayout>

</RelativeLayout>
