<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/apptheme_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageButton
            android:id="@+id/image_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="兑换金豆"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/PX_330"
        android:orientation="vertical"
        android:background="@drawable/exgoldenbean_top_bg"
        >
        <TextView
            android:id="@+id/exgoldenbean_gdtitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的金豆余额"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/exgoldenbean_gdnum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exgoldenbean_gdtitle_tv"
            android:text="0金豆"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exgoldenbean_top_jd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/exgoldenbean_gdnum_tv"
            />

        <ImageButton
            android:id="@+id/exgoldenbean_gogame_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/exgoldenbean_gogame_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/PX_100"
            />
        <ImageButton
            android:id="@+id/exgoldenbean_exchange_coin_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/exgoldenbean_exchange_coin_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/PX_100"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/exgoldenbean_10_iv"
            android:layout_width="@dimen/PX_320"
            android:layout_height="wrap_content"
            android:src="@drawable/exgoldenbean_10_jb"
            android:layout_marginRight="15dp"
            />
        <ImageView
            android:id="@+id/exgoldenbean_20_iv"
            android:layout_width="@dimen/PX_320"
            android:layout_height="wrap_content"
            android:src="@drawable/exgoldenbean_20_jb"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/exgoldenbean_50_iv"
            android:layout_width="@dimen/PX_320"
            android:layout_height="wrap_content"
            android:src="@drawable/exgoldenbean_50_jb"
            android:layout_marginRight="15dp"
            />
        <ImageView
            android:id="@+id/exgoldenbean_100_iv"
            android:layout_width="@dimen/PX_320"
            android:layout_height="wrap_content"
            android:src="@drawable/exgoldenbean_100_jb"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/exgoldenbean_200_iv"
            android:layout_width="@dimen/PX_320"
            android:layout_height="wrap_content"
            android:src="@drawable/exgoldenbean_200_jb"
            android:layout_marginRight="15dp"
            />
        <ImageView
            android:id="@+id/exgoldenbean_500_iv"
            android:layout_width="@dimen/PX_320"
            android:layout_height="wrap_content"
            android:src="@drawable/exgoldenbean_500_jb"
            />

    </LinearLayout>
     </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
