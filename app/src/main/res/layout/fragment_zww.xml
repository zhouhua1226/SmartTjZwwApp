<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceaea"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/apptheme_bg">

        <ImageButton
            android:id="@+id/zww_exshop_ibtn"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/apptheme_bg"
            android:src="@drawable/zww_intelshop_tab_christmas" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/app_titie_home_christmas" />
        <ImageButton
            android:id="@+id/zww_integral_ibtn"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/apptheme_bg"
            android:src="@drawable/icon_reward_gold_christmas"
            android:visibility="visible" />
    </RelativeLayout>
       <com.game.smartremoteapp.view.reshrecyclerview.XRecyclerView
           android:id="@+id/zww_recyclerview"
           android:layout_width="match_parent"
           android:background="#f3f3f2"
           android:overScrollMode="never"
           android:layout_height="match_parent"
           android:scrollbars="none" />
</LinearLayout>