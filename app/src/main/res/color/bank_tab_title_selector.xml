<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_pressed="false" android:state_checked="false" android:color="#b2b1b2"/>
    <item android:state_focused="false" android:state_pressed="false" android:state_checked="true" android:color="@color/black"/>

    <!-- Focused states -->
    <item android:state_focused="true" android:state_pressed="false" android:state_checked="false" android:color="#b2b1b2"/>
    <item android:state_focused="true" android:state_pressed="false" android:state_checked="true" android:color="@color/black"/>

    <!-- Pressed -->
    <item android:state_checked="true" android:color="@color/black"/>
</selector>